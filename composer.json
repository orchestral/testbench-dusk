{
    "name": "orchestra/testbench-dusk",
    "description": "Laravel Dusk Testing Helper for Packages Development",
    "type": "library",
    "license": "MIT",
    "authors": [
        {
            "name": "Keoghan Litchfield",
            "email": "keoghan@klever.co.uk",
            "homepage": "https://klever.co.uk",
            "role": "Developer"
        },
        {
            "name": "Mior Muhammad Zaki",
            "email": "crynobone@gmail.com",
            "homepage": "https://github.com/crynobone",
            "role": "Organization Maintainer"
        }
    ],
    "autoload": {
        "psr-4": {
            "Orchestra\\Testbench\\Dusk\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Orchestra\\Testbench\\Dusk\\Tests\\": "tests/"
        }
    },
    "require": {
        "php": ">=7.0",
        "facebook/webdriver": "~1.3",
        "jeremeamia/superclosure": "^2.3",
        "konsulting/project-root": "~1.0",
        "laravel/dusk": "~2.0.11",
        "orchestra/testbench": "~3.5.2"
    },
    "require-dev": {
        "mockery/mockery": "~1.0",
        "phpunit/phpunit": "~6.0"
    },
    "suggest": {
        "orchestra/database": "Allow to use --realpath migration for testing (~3.5)."
    },
    "extra": {
        "branch-alias": {
            "dev-master": "3.5-dev"
        }
    },
    "scripts": {
        "test": [
            "@php -r \"file_exists('laravel/database/database.sqlite') || copy('laravel/database/database.sqlite.example', 'laravel/database/database.sqlite');\"",
            "@php vendor/bin/phpunit -c ./ --color"
        ]
    },
    "config": {
        "sort-packages": true
    },
    "minimum-stability": "dev"
}
